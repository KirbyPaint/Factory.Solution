@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<h1>Machine Details for @Html.DisplayFor(model => model.MachineName)</h1>

<hr>

<p>Machine Name: @Html.DisplayFor(model => model.MachineName)</p>
<p>Currently Operational: @Html.DisplayFor(model => model.IsOperational)</p>

@if(@Model.JoinEntities.Count == 0)
{
  <p>No Engineers are currently licensed to repair this Machine</p>
}
else
{
  <p>Engineers licensed to repair this Machine:</p>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Engineer.FullName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to all Machines", "Index")</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>