@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Edit @Html.DisplayFor(model => model.MachineName)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  <p>@Html.Label("Machine Name:")
  @Html.TextBoxFor(model => model.MachineName, new { @required="required" })</p>

  <p>@Html.Label("Check Box if this Machine is currently operational:")
  @Html.CheckBoxFor(model => model.IsOperational)</p>

  <input type="submit" value="Save" class="btn btn-default">
}
<p>@Html.ActionLink("Back to list", "Index")</p>