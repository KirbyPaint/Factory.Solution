@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add Engineer to Database</h1>

<hr>

@using (Html.BeginForm())
{
  <p>@Html.Label("First Name:")
  @Html.TextBoxFor(model => model.FirstName, new { @required="required" })</p>

  <p>@Html.Label("Last Name:")
  @Html.TextBoxFor(model => model.LastName, new { @required="required" })</p>

  <input type="submit" value="Confirm" class="btn btn-default">
}

<hr>

<p>@Html.ActionLink("Back to Engineers List", "Index")</p>

<hr>