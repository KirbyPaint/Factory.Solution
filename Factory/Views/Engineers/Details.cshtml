@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Engineer Details: @Html.DisplayFor(model => model.FullName)</h1>

<hr>

<p>@Html.DisplayFor(model => model.LastName), @Html.DisplayFor(model => model.FirstName)</p>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Engineer is not currently licensed to repair any Machines</p>
}
else
{
  <p>Machines this Engineer is licensed to repair:</p>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.MachineName</li>
    @using (Html.BeginForm("DeleteMachine", "Engineers"))
    {
      @Html.Hidden("joinId", @join.EngineerMachineId)
      <input type="submit" value="Delete" class="btn btn-default">
    }
  }
  </ul>
}

<p>@Html.ActionLink("Register Machine for this Engineer", "AddMachine", new { id = Model.EngineerId })</p>

<hr>

<p>@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>

<hr>

<p>@Html.ActionLink("Back to Engineers List", "Index")</p>

<hr>