@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

<hr>

@if (@Model.Count == 0)
{
  <p>No Engineers found in database.</p>
}

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.FullName}", "Details", new { id = engineer.EngineerId })</li>
}

<hr>

<p>@Html.ActionLink("Add new Engineer", "Create")</p>

<hr>