@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Edit</h1>

<hr>

<p>Edit this Engineer: @Html.DisplayFor(model => model.FullName)</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  <p>First name:
  @Html.TextBoxFor(model => model.FirstName, new { @required="required" })</p>

  <p>Last name:
  @Html.TextBoxFor(model => model.LastName, new { @required="required" })</p>

  @* IF TIME PERMITS
  Add some way to validate that machines exist before presenting this drop-down *@
  @Html.Label("Add new Machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" class="btn btn-default">
}

<hr>

<p>@Html.ActionLink("Back to Engineers List", "Index")</p>

<hr>